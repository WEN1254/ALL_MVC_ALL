    <script>

        var LineBotcount = 0;
        function LineBot() {
            if (LineBotcount % 2 == 0) {
                var LineQr = document.getElementById("LineQr");
                LineQr.style.display = "block";
                LineBotcount++;
            }
            else {
                var LineQr = document.getElementById("LineQr");
                LineQr.style.display = "none";
                LineBotcount++;
            }
        }

    </script>

